<div>
    <h1>The Snowboard Store</h1>

    <h3>Companies:</h3>
    <div>
        <a href="/companies/new">Add New Company</a>
    </div>
    {{#each companies}}
        <div>
            {{this.name}} - {{this.country}}
            <a href="/companies/{{this._id}}">{{this.name}} Info</a>
            <a href="/companies/{{this._id}}/snowboards">{{this.name}}'s Snowboards</a>
        </div>
    {{/each}}
</div>